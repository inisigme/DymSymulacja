layout( location = COLOR ) in vec4 inColor;

//////////////////////////////////////////////////////////////////////
// blok zmiennych wyjœciowych
//////////////////////////////////////////////////////////////////////
out Vertex
{
    vec4 color;     // kolor wierzcho³ka
} Out;

//////////////////////////////////////////////////////////////////////
// program g³ówny
